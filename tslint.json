{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        180
      ]
    },
    "no-empty": false,
    "object-literal-sort-keys": false,
    "array-type": [
      true,
      "generic"
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "trailing-comma": [
      false,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        180
      ]
    }
  }
}
